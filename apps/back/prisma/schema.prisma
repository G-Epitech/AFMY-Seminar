generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(cuid())
  email   String   @unique
  name    String
  phone   String
  photo   String?
  address String?
  coach   Employee @relation(fields: [coachId], references: [id])
  coachId String
  events  Event[]  @relation("EventAttendees")
}

enum Role {
  MASTER
  COACH
}

model Employee {
  id       String  @id @default(cuid())
  email    String  @unique
  name     String
  phone    String
  photo    String?
  address  String?
  role     Role
  coachees User[]
}

model Event {
  id        String   @id @default(cuid())
  title     String
  date      DateTime
  location  String
  attendees User[]   @relation("EventAttendees")
}

model Tip {
  id      String @id @default(cuid())
  title   String
  content String
}
